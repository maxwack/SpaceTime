<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".frag_communicate"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/sun_large"
            >

            <TextView
                android:id="@+id/txt_sun"
                android:layout_width="168dp"
                android:layout_height="match_parent"
                android:layout_marginStart="100dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/txt_sun"
                android:fontFamily="@font/digitaldream"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp" />

            <RelativeLayout
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/but_Sun"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/sunSineWave"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="-1dp"
                    android:gravity="center"
                    android:text="Send" />

                <view.DynamicSineWaveView
                    android:id="@+id/sunSineWave"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="11dp" />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/moon_large">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="168dp"
                android:layout_height="match_parent"
                android:layout_marginStart="100dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/txt_moon"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/digitaldream"
                android:textSize="30sp" />

            <Button
                android:id="@+id/but_Moon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:text="Send" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>