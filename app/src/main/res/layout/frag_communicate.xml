<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Frag_Communicate">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/sun_large"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_sun"
                android:layout_width="168dp"
                android:layout_height="match_parent"
                android:layout_marginStart="100dp"
                android:layout_weight="1"
                android:fontFamily="@font/digitaldream"
                android:gravity="center_vertical"
                android:text="@string/txt_sun"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp" />

            <RelativeLayout
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/but_Send_SUN"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/SUN_SineWave"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="-1dp"
                    android:background="@drawable/but_border"
                    android:fontFamily="@font/digitaldream"
                    android:gravity="center"
                    android:text="SEND"
                    android:textColor="@color/colorPrimary" />

                <Button
                    android:id="@+id/but_Accept_SUN"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/SUN_SineWave"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="-1dp"
                    android:background="@drawable/but_border"
                    android:fontFamily="@font/digitaldream"
                    android:gravity="center"
                    android:text="ACCEPT"
                    android:textColor="@color/colorPrimary" />

                <com.mobile.hinde.view.DynamicSineWaveView
                    android:id="@+id/SUN_SineWave"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="11dp" />

                <TextView
                    android:id="@+id/SUN_Timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/digitaldream"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp" />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/moon_large"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="168dp"
                android:layout_height="match_parent"
                android:layout_marginStart="100dp"
                android:layout_weight="1"
                android:fontFamily="@font/digitaldream"
                android:gravity="center_vertical"
                android:text="@string/txt_moon"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp" />


            <RelativeLayout
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/but_Send_MOON"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/MOON_SineWave"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="-1dp"
                    android:background="@drawable/but_border"
                    android:fontFamily="@font/digitaldream"
                    android:gravity="center"
                    android:text="SEND"
                    android:textColor="@color/colorPrimary" />

                <Button
                    android:id="@+id/but_Accept_MOON"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/MOON_SineWave"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="-1dp"
                    android:background="@drawable/but_border"
                    android:fontFamily="@font/digitaldream"
                    android:gravity="center"
                    android:text="ACCEPT"
                    android:textColor="@color/colorPrimary" />

                <com.mobile.hinde.view.DynamicSineWaveView
                    android:id="@+id/MOON_SineWave"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="11dp" />

                <TextView
                    android:id="@+id/MOON_Timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/digitaldream"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>